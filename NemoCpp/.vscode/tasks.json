{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang++ build active file",
      "command": "/usr/bin/clang++",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "${workspaceFolder}/src/main/main.cc",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}",
        "-I",
        "${workspaceFolder}",
        "-Wall",
        "-g",
        "-std=c++17"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
